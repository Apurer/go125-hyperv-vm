# Git LFS tracking for VM disk images
*.vhdx filter=lfs diff=lfs merge=lfs -text
*.vhdx.gz filter=lfs diff=lfs merge=lfs -text
*.vmdk filter=lfs diff=lfs merge=lfs -text
*.vmdk.gz filter=lfs diff=lfs merge=lfs -text
*.qcow2 filter=lfs diff=lfs merge=lfs -text
*.qcow2.gz filter=lfs diff=lfs merge=lfs -text
*.vdi filter=lfs diff=lfs merge=lfs -text
*.vdi.gz filter=lfs diff=lfs merge=lfs -text
*.iso filter=lfs diff=lfs merge=lfs -text
*.img filter=lfs diff=lfs merge=lfs -text

# Text files - normal git
*.md text
*.sh text eol=lf
*.txt text
*.yml text
*.yaml text
*.json text
